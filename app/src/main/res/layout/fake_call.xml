<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/black"
    tools:context=".fakeui">


    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="30dp"
        android:text="216-989-1234"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t1"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="30dp"
        android:text="01:23"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/t1"
        android:layout_marginTop="290dp"
        android:src="@drawable/ic_bluetooth" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/t1"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="290dp"
        android:layout_toRightOf="@id/imageButton3"
        android:src="@drawable/ic_speaker" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@id/t1"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="290dp"
        android:layout_toRightOf="@id/imageButton4"
        android:src="@drawable/ic_micoff" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@id/imageButton3"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_addcall" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@id/imageButton4"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/imageButton6"
        android:src="@drawable/ic_callforwarded" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@id/imageButton5"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/imageButton7"
        android:src="@drawable/ic_dialpad" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@id/imageButton7"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/imageButton6"
        android:src="@drawable/ic_cutcall"
        android:onClick="onClick"/>
</RelativeLayout>